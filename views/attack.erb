<% if @game.player_2.hp > 0 %>

  <h1><%= @game.player_1.name %> hit <%= @game.player_2.name %>!</h1>
  <h2><%= @game.player_2.attack.damage %> health points lost!</h2>
  <h2><%= @game.player_2.name %>'s health: <%= @game.player_2.hp %></h2>

  <% if @game.turn_count.even? %>
    <form action='/p2_turn'>
      <input type="submit" value="Continue the battle">
    </form>
  <% else %>
    <h2><%= @game.player_2.name %> has been put to sleep</h2>
    <form action='/p1_turn'>
      <input type="submit" value="<%= @game.player_1.name %> go again">
    </form>
  <% end %>

<% else %>
  <h1><%= @game.player_2.name %> has been defeated</h1>
  <form action='/'>
    <input type="submit" value="Play again?">
  </form>
<% end %>
